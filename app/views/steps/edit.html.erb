<%= cloudinary_js_config %>
<div class="container new-post">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 align="center">Edit step</h1>
        <%= bootstrap_form_for(@step) do |f| %>
          <%= f.text_field  :name, 
                            maxlength: 100, 
                            placeholder: 'Title', 
                            class: 'form-control',
                            required: true, 
                            minlength: 5,
                            maxlength: 100 %>
          <%= f.text_area :content, 
                          rows: 6,
                          required: true, 
                          minlength: 20,
                          maxlength: 1000,
                          placeholder: 'Describe your step', 
                          class: 'form-control' %>
          <%= f.text_area :img_url,
                          rows: 1,
                          class: 'form-control',
                          placeholder: 'Paste image url',
                          id: 'url_up' %>
          <a class="btn btn-social-icon btn-success btn-md" id="upload_widget_opener">
            <i class="fa fa-picture-o steps_edit_icons"></i>
          </a>
        <button type="submit" class="btn btn-facebook edit_post_button"><%= t('posts.edit.update') %></button>
      <% end %>
    </div>
  </div>
</div> 
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script type="text/javascript">  
  
  $('#upload_widget_opener').cloudinary_upload_widget(
    { cloud_name: 'druq4napx', upload_preset: 'eaj9ogad', 
      cropping: 'server', folder: 'user_photos' },
    function(error, result) { $("#url_up").val(result[0].secure_url) });

</script>
