<%= bootstrap_form_for(@post) do |f| %>
  <%= f.text_field  :title, 
                    maxlength: 100, 
                    placeholder: 'Title', 
                    class: 'form-control',
                    required: true, 
                    minlength: 5,
                    maxlength: 100 %>
  <%= f.text_area :content, 
                  rows: 6,
                  required: true, 
                  minlength: 20,
                  maxlength: 1000,
                  placeholder: 'Describe your instruction', 
                  class: 'form-control' %>
   <%= f.text_area :img_url,
                   rows: 1,
                   class: 'form-control',
                   placeholder: 'Paste image url' %>
  <%= f.collection_select :category_id, @categories, :id, :name, class: 'form-control' %>
  <%= f.text_field :tag_list, :class => "form-control", placeholder: "Add some tags through comma" %>
  
  <%= f.submit "Create a post", class: 'form-control' %>
<% end %>