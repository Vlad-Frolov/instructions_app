<%= bootstrap_form_for(@post) do |f| %>
  <%= f.text_field  :title,
                    maxlength: 100,
                    placeholder: t('posts.title'),
                    class: 'form-control',
                    required: true,
                    minlength: 5,
                    maxlength: 100 %>
  <%= f.text_field :content, class: 'editor' %>
   <%= f.hidden_fiel :img_url,
                     rows: 1,
                     class: 'form-control',
                     placeholder: 'Paste image url',
                     id: 'url_up'%>
  <%= f.text_field :video_url,
                    rows: 1,
                    class: 'form-control',
                    placeholder: t('posts.video_url'),
                    id: 'video_up' %>
  <%= f.collection_select :category_id, @categories, :id, :name, class: 'form-control' %>
  <%= f.text_field :tag_list, :class => "form-control", placeholder: t('posts.tags') %>
  <p><a class="btn btn-social-icon btn-success btn-md" id="upload_widget_opener">
    <i class="fa fa-picture-o steps_edit_icons"></i>
  </a></p>
  <p><%= f.submit t('posts.create'), class: 'form-control btn btn-success' %></p>
<% end %>
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script type="text/javascript" src="/assets/steps/upload_img"></script>
