<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<div id="branch-main-content" class="container">
  <div class="row">
    <h1 class="page-title">Instructions</h1>
    <%= render 'posts/create_new_post' %>
  </div><!-- row -->
  <div class="row">
  <%= render  'posts/search_form' %>
  </div><!-- row -->
  <div class="row">
    <%= render 'posts/categories' %>
  </div>
    <div class="col-lg-12 tagcloud">
    <% tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), class: css_class %>
    <% end %>
    </div>
  <div class="row">
    <div class="col-sm-12" id="feed">
      <%= render @posts %>
      
      <%= render no_posts_path %>
    </div>
  </div><!-- row -->	

  <div class="infinite-scroll">
    <%= will_paginate @posts %>
  </div>
</div><!-- container -->

<script>
  $(document).ready(function(){
    var classes = ["label label-primary","label label-success","label label-info","label label-warning","label label-default","label label-default","label label-danger"];

    $(".tagcloud a").each(function(){
        $(this).addClass(classes[~~(Math.random()*classes.length)]);
    });
});
</script>