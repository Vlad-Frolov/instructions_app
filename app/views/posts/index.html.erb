<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script> %>
<%# <script src="app/assets/javascripts/posts/tag_cloud.js", type="text/javascript"></script> %>
<script src="/assets/posts/tag_cloud"></script>

<div id="branch-main-content" class="container">
  <div class="row">
    <h1 class="page-title">Instructions</h1>
    <%= render 'posts/create_new_post' %>
  </div><!-- row -->
  <div class="row">
  <%= render  'posts/search_form' %>
  </div><!-- row -->
  <div class="row">
    <%= render 'posts/categories' %>
  </div>
  <p>Tag cloud</p>
    <div class="col-lg-12 tagcloud">
    <% tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), remote: true, class: 'css_class label label-success' %>
    <% end %>
    </div>
  <div class="row">
    <div class="col-sm-12" id="feed">
      <%= render @posts %>
      
      <%= render no_posts_path %>
    </div>
  </div><!-- row -->	

  <div class="infinite-scroll">
    <%= will_paginate @posts %>
  </div>
</div><!-- container -->
